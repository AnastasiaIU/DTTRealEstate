<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application light theme. -->
    <style name="Base.Theme.DTTRealEstate" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/strong</item>
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/medium</item>
        <item name="colorSurfaceVariant">@color/dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/light</item>

        <!-- Text appearances. -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.DTTRealEstate.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.DTTRealEstate.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.DTTRealEstate.TitleSmall</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.DTTRealEstate.BodyMedium</item>
    </style>

    <style name="Theme.DTTRealEstate" parent="Base.Theme.DTTRealEstate" />

    <!-- Auxiliary search theme to set the caret color. -->
    <style name="Theme.DTTRealEstate.Search" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="colorPrimary">@color/strong</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.DTTRealEstate</item>
    </style>

</resources>