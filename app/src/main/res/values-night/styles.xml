<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text style Title 01. -->
    <style name="TextAppearance.DTTRealEstate.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/gotham_ssm_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <!-- Text style Title 02. -->
    <style name="TextAppearance.DTTRealEstate.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
