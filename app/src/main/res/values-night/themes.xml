<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application dark theme. -->
    <style name="Base.Theme.DTTRealEstate" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_theme_primary</item>
        <item name="colorSecondaryContainer">@color/dark_theme_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/dark_theme_on_secondary_container</item>
        <item name="android:colorBackground">@color/dark_theme_background</item>
        <item name="colorSurface">@color/dark_theme_surface</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorSurfaceVariant">@color/dark_theme_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/dark_theme_on_surface_variant</item>

        <!-- Text appearances. -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.DTTRealEstate.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.DTTRealEstate.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.DTTRealEstate.TitleSmall</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.DTTRealEstate.BodyMedium</item>
    </style>

    <!-- Auxiliary search theme to set the caret color. -->
    <style name="Theme.DTTRealEstate.Search" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="colorPrimary">@color/light_gray</item>
    </style>

</resources>